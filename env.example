# Database configuration
DATABASE_URL="file:./data/production.db"

# Twilio configuration for SMS notifications
# Get these from your Twilio Console at https://console.twilio.com/
TWILIO_ACCOUNT_SID="your_account_sid_here"
TWILIO_AUTH_TOKEN="your_auth_token_here"
TWILIO_PHONE_NUMBER="your_twilio_phone_number_here"

# How to get Twilio credentials:
# 1. Sign up for a Twilio account at https://www.twilio.com/
# 2. Go to the Twilio Console at https://console.twilio.com/
# 3. Find your Account SID and Auth Token on the Console Dashboard
# 4. Purchase a phone number from Twilio's Phone Numbers section
# 5. Use the format +1234567890 for TWILIO_PHONE_NUMBER

# Optional: Environment configuration
NODE_ENV="production"

# Optional: JWT secret for authentication (if implemented)
JWT_SECRET="your_jwt_secret_here"

# Optional: App configuration
APP_URL="http://localhost:3000"
PORT=3000